{# templates/ngrok_vhost.twig #}
<VirtualHost *:80>
    ServerAdmin webmaster@testing.test
    DocumentRoot /var/www/testing
    ServerAlias *ngrok.io

    <Directory {{ path_to_site }}>
    Options Indexes FollowSymLinks
    AllowOverride All
    Require all granted
    </Directory>

    ErrorLog  /var/log/apache2/testing.test-error_log
    CustomLog /var/log/apache2/testing.test-access_log common
</VirtualHost>